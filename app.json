{
  "expo": {
    "name": "K-Buddy",
    "slug": "k-buddy",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/app_icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.teamkbuddy.kbuddy",
      "googleServicesFile": "./GoogleService-Info.plist",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "$(PRODUCT_NAME) needs access to your camera to let you take photos and upload them when creating posts or updating your profile.",
        "NSPhotoLibraryUsageDescription": "$(PRODUCT_NAME) needs access to your gallery so you can select existing images to attach to your posts or profile.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "entitlements": {
        "aps-environment": "production"
      },
      "appleTeamId": "PN765X482W"
    },
    "android": {
      "package": "com.teamkbuddy.kbuddy",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      ["@react-native-firebase/app"],
      ["@react-native-firebase/crashlytics"],
      ["@react-native-firebase/messaging"],
      [
        "expo-camera",
        {
          "cameraPermission": "$(PRODUCT_NAME) needs access to your camera to let you take photos and upload them when creating posts or updating your profile."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "$(PRODUCT_NAME) needs access to your gallery so you can select existing images to attach to your posts or profile.",
          "savePhotosPermission": "$(PRODUCT_NAME) needs permission to save edited or captured images to your device.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "extraMavenRepos": [
              "https://devrepo.kakao.com/nexus/content/groups/public/"
            ]
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "@react-native-kakao/core",
        {
          "nativeAppKey": "bafde7003969c3c49c0f935b8ae397c3",
          "android": {
            "authCodeHandlerActivity": true
          },
          "ios": {
            "handleKakaoOpenUrl": true
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#6952f9",
          "image": "./assets/splash_icon.png",
          "resizeMode": "contain",
          "android": {
            "imageWidth": 100
          },
          "ios": {
            "imageWidth": 100
          }
        }
      ],
      [
        "@hot-updater/react-native",
        {
          "channel": "production"
        }
      ],
      ["@react-native-google-signin/google-signin"],
      ["expo-apple-authentication"],
      ["expo-notifications"],
      "expo-font"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "3310567e-85a4-46ef-9499-4a56486657a7"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/3310567e-85a4-46ef-9499-4a56486657a7"
    }
  }
}
